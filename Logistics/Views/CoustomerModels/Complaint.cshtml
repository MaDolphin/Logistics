@model Logistics.Models.Complaint
    @{
    ViewBag.Title = "投诉";
    }
    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title></title>
        <link href="../Content/style.css" rel="stylesheet" type="text/css" />
        <link href="http://libs.baidu.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">
        <link href="../media/css/PackNoform.css" rel="stylesheet" type="text/css" />

        <link href="../media/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="../media/css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css" />
        <link href="../media/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
        <link href="../media/css/style-metro.css" rel="stylesheet" type="text/css" />
        <link href="../media/css/style.css" rel="stylesheet" type="text/css" />
        <link href="../media/css/style-responsive.css" rel="stylesheet" type="text/css" />

        <link href="../media/css/uniform.default.css" rel="stylesheet" type="text/css" />

        <script src="http://libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
        <script src="http://libs.baidu.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="../Scripts/loginForm.js"></script>
    </head>
    <body style="margin:0px 20px 0px 20px ">
        <nav class="navbar navbar-inverse" role="navigation">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">快递100</a>
            </div>
            <div>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="../CoustomerModels/Complaint">投诉</a></li>
                    <li class="active"><a href="../Home/Login">登录</a></li>
                    <li style="width:40px;"></li>
                </ul>
            </div>
        </nav>
        
        <div style="margin:0px 150px 0px 150px">
            <div class="row-fluid">
                <div class="span12">
                    <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                    <h3 class="page-title">
                        投诉
                    </h3>
                    <ul class="breadcrumb">
                        <li>
                            <i class="icon-home"></i>
                            <a href="#">主页</a>
                            <i class="icon-angle-right"></i>
                        </li>
                        <li>
                            <a href="#">投诉</a>
                        </li>
                    </ul>
                    <!-- END PAGE TITLE & BREADCRUMB-->
                </div>
            </div>
            @using (Html.BeginForm("Complaint", "CoustomerModels", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row-fluid">
                    <div class="form-horizontal">
                        <div class="control-group">
                            <label class="control-label">投诉快递单号</label>
                            <div class="controls">
                                @Html.EditorFor(model => model.PackNo, new { htmlAttributes = new { @class = "span4 m-wrap" } })
                                @Html.ValidationMessageFor(model => model.PackNo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">投诉人姓名</label>
                            <div class="controls">
                                @Html.EditorFor(model => model.ComplaintName, new { htmlAttributes = new { @class = "span4 m-wrap" } })
                                @Html.ValidationMessageFor(model => model.ComplaintName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">投诉人电话</label>
                            <div class="controls">
                                @Html.EditorFor(model => model.ComplaintTel, new { htmlAttributes = new { @class = "span4 m-wrap" } })
                                @Html.ValidationMessageFor(model => model.ComplaintTel, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">投诉内容</label>
                            <div class="controls">
                                @Html.TextAreaFor(model => model.ComplaintContent, 6, 50, null)
                                @Html.ValidationMessageFor(model => model.ComplaintContent, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn blue">提交</button>
                        <button type="button" class="btn">取消</button>
                    </div>
                </div>
            }
        </div>
    </body>
</html>
